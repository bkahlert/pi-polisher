[Unit]
Description=Pi Hero USB Gadget
ConditionPathIsDirectory=/sys/kernel/config/usb_gadget
After=systemd-modules-load.service
Before=network.target

[Service]
Type=oneshot
ExecStart=/opt/pihero/usb-gadget start
ExecStop=/opt/pihero/usb-gadget stop
RemainAfterExit=yes
TimeoutStartSec=120

[Install]
WantedBy=network.target
