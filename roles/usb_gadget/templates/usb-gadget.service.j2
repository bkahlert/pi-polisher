[Unit]
Description=Pi Hero USB Gadget
ConditionPathIsDirectory=/sys/kernel/config/usb_gadget
After=systemd-modules-load.service
Before=network.target

[Service]
Type=oneshot
ExecStart={{ package_dir }}/usb-gadget start
ExecStop={{ package_dir }}/usb-gadget stop
RemainAfterExit=yes
TimeoutStartSec=60

[Install]
WantedBy=network.target
